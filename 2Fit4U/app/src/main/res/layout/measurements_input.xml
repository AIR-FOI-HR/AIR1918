<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/measurements_dialog_input_neck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Neck entry"
            android:imeOptions="actionNext"
            android:nextFocusDown="@id/measurements_dialog_input_hip"
            android:inputType="numberDecimal" />
        <EditText
            android:id="@+id/measurements_dialog_input_hip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hip entry"
            android:imeOptions="actionNext"
            android:nextFocusDown="@id/measurements_dialog_input_waist"
            android:inputType="numberDecimal" />
        <EditText
            android:id="@+id/measurements_dialog_input_waist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Waist entry"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal" />

    </com.google.android.material.textfield.TextInputLayout>
</FrameLayout>